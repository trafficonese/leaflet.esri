Package: leaflet.esri
Type: Package
Title: 'ESRI' Bindings for the 'leaflet' Package
Version: 1.0.0
Authors@R: c(
      person("Bhaskar", "Karambelkar", email = "bhaskarvk@gmail.com", role = c("aut", "cre")),
      person("Barret", "Schloerke", email = "barret@rstudio.com", role = c("aut")),
